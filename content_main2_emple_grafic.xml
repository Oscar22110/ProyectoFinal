<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2ActivityEmpleGrafic"
    tools:showIn="@layout/activity_main2_emple_grafic">

    <EditText
        android:id="@+id/txtNomAntena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Nombre Antena:"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtidDecibel" />

    <EditText
        android:id="@+id/txtValorGrafic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Decibeles:"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomAntena" />

    <EditText
        android:id="@+id/txtidDecibel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="ID Lectura:"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/btnAgregaGrafic"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/botones"
        android:onClick="btnAgregarDato"
        android:text="agregar"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCargarGrafica"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botones"
        android:onClick="getAllComunidades"
        android:text="cargar datos"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLimpiaGrafica" />

    <Button
        android:id="@+id/btnLimpiaGrafica"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botones"
        android:onClick="LimpiarGrafic"
        android:text="Limpiar"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBorraGrafi" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:tint="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/graficar" />

    <Button
        android:id="@+id/btnConsultaGrafic"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botones"
        android:onClick="btnConsultarGrafic"
        android:text="consultar"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toEndOf="@+id/txtidDecibel"
        app:layout_constraintTop_toBottomOf="@+id/btnAgregaGrafic" />

    <Button
        android:id="@+id/btnActualizaGrafic"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botones"
        android:onClick="btnActualizarGrafica"
        android:text="actualizar"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toEndOf="@+id/txtNomAntena"
        app:layout_constraintTop_toBottomOf="@+id/btnConsultaGrafic" />

    <Button
        android:id="@+id/btnBorraGrafi"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botones"
        android:onClick="btnBorrarGrafic"
        android:text="borrar"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toEndOf="@+id/txtValorGrafic"
        app:layout_constraintTop_toBottomOf="@+id/btnActualizaGrafic" />

    <Button
        android:id="@+id/btnGraficar"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botones"
        android:onClick="graficaClic"
        android:text="Graficar"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCargarGrafica" />

    <Button
        android:id="@+id/btnListaGrafic"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/botones"
        android:onClick="btnListaGrafic"
        android:text="lista"
        android:textColor="@color/primary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtValorGrafic"
        app:layout_constraintVertical_bias="0.345" />

</androidx.constraintlayout.widget.ConstraintLayout>
